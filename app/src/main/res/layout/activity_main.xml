<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beltrao.healthy.views.MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ico_botao_cadastro"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/material"
        android:id="@+id/btn_register" />

    <ImageButton
        app:srcCompat="@drawable/ico_botao_entrar"
        android:id="@+id/btn_login"
        android:elevation="0dp"
        android:scaleType="centerCrop"
        android:layout_width="300dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:background="@drawable/material"
        android:layout_above="@+id/btn_redefinePassword"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp" />

    <ImageView
        android:layout_width="70dp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/logo"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:layout_height="70dp" />

    <ImageButton
        app:srcCompat="@drawable/ico_redefinir_senha"
        android:id="@+id/btn_redefinePassword"
        android:cropToPadding="false"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:layout_width="300dp"
        android:background="@drawable/material"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login" />

    <ImageView
        app:srcCompat="@drawable/ico_senha"
        android:id="@+id/ico_password"
        android:layout_marginBottom="23dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_login"
        android:layout_alignLeft="@+id/btn_login"
        android:layout_alignStart="@+id/btn_login" />

    <ImageView
        app:srcCompat="@drawable/ico_usuario"
        android:id="@+id/ico_user"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/ico_password"
        android:layout_alignLeft="@+id/ico_password"
        android:layout_alignStart="@+id/ico_password"
        android:layout_marginBottom="8dp" />

    <EditText
        android:inputType="number"
        android:ems="10"
        android:id="@+id/login_field"
        tools:background="@drawable/material_red"
        android:layout_height="50dp"
        android:layout_width="230dp"
        android:layout_alignTop="@+id/ico_user"
        android:layout_toRightOf="@+id/ico_user"
        android:layout_toEndOf="@+id/ico_user"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <EditText
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_field"
        tools:background="@drawable/material_red"
        android:layout_height="50dp"
        android:layout_width="230dp"
        android:layout_alignTop="@+id/ico_password"
        android:layout_alignLeft="@+id/login_field"
        android:layout_alignStart="@+id/login_field" />

</RelativeLayout>

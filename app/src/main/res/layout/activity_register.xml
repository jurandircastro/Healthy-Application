<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beltrao.healthy.views.Register"
    android:background="@drawable/background">

    <ImageButton
        android:layout_width="match_parent"
        app:srcCompat="@drawable/btn_cadastro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/btn_register"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_height="50dp"
        android:background="@drawable/material" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ocr"
        android:id="@+id/btn_ocr"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/btn_register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/material" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/senha_cadastro"
        android:layout_marginTop="79dp"
        android:id="@+id/password_view"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confirmar_senha_cadastro"
        android:id="@+id/confirmPassword_view"
        android:adjustViewBounds="true"
        android:layout_below="@+id/password_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:id="@+id/password_field"
        android:layout_above="@+id/confirmPassword_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_alignBottom="@+id/confirmPassword_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/confirm_password" />
</RelativeLayout>
